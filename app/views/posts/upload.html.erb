<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Upload CSV File</div>
   
                <div class="card-body">
                    <%= form_tag import_posts_path, multipart: true, :html => { :style => 'width: 80%;' } do %>
                        <div class="col-md-8">
                            <%= file_field_tag :file, class: "form-control" %>
                        </div>
                        <br>
                        <div class="form-group row mb-0">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Import File
                                </button>
                                <%= link_to "Back",  url_for(:back), class: 'btn btn-light' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>