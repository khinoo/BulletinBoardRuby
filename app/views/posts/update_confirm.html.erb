<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">

                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4 text-primary">Update Post Confirm</h3>
                </div>

                <div class="card-body">  
                    <%= form_with model: @post, url: post_update_posts_path, :html => { :style => 'width: 80%;' } do |form| %>

                        <ul>
                            <% @post.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>

                    <div class="form-group mb-3 row">
                        <div class="col-sm-5 col-form-label text-end"> <%= form.label :title %> </div>
                        <div class="col-sm-6"><%= form.text_field :title, class: "form-control", :readonly => true %></div>
                        <label style="color: red;">*</label>
                    </div>

                    <div class="form-group mb-3 row">
                        <div class="col-sm-5 col-form-label text-end"> <%= form.label :description %> </div>
                        <div class="col-sm-6"> <%= form.text_area :description, class: "form-control", :readonly => true %> </div>
                        <label style="color: red;">*</label>
                    </div>

                    <div class="form-group mb-3 row">
                        <div class="col-sm-5 col-form-label text-end"> <%= form.label :status %> </div>
                        <div class="col-sm-7 align-self-center"> <div class="form-check form-switch"><%= form.check_box :status, class: 'form-check-input', id: 'id="flexSwitchCheckChecked"' %> </div></div>
                    </div>
                    <!-- hidden post id -->
                    <%= form.hidden_field :id %>
                    <%= form.hidden_field :status %>
                    <div class="form-group mb-3 row mb-0">
                      <div class="col-sm-5 col-form-label text-end"> </div>
                      <div class="col-sm-7">
                          <%= form.submit "Confirm", class: 'btn btn-primary' %>
                          <%= link_to "Cancel", 'javascript:history.go(-1);', class: 'btn btn-secondary' %>
                      </div>
                    </div>
                  <% end %>
                </div>

            </div>
        </div>
    </div>
</div>