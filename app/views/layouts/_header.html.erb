<div id="app">
   <% if current_user != nil %>
      <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
         <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="{{ __('Toggle navigation') }}">
                 <span class="navbar-toggler-icon"></span>
            </button>

            <h2 class="text-center font-weight-light my-4 text-primary">SCM Bulletin Board</h2>
            <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
               <a class="dropdown-item text-primary" href="/users" data-toggle="tooltip" data-placement="top" title="Go to the userlist">
                   UserList 
               </a>
            </li>
            <li class="nav-item dropdown">
            <a class="dropdown-item text-primary" href="/users/<%= current_user.id %>/profile" data-toggle="tooltip" data-placement="top" title="Go to the user profile">
               <%= current_user.name %>
            </a>
            </li>
            <li class="nav-item dropdown">
               <a class="dropdown-item text-primary" href="/posts" data-toggle="tooltip" data-placement="top" title="Go to the Post List">
                     Posts
               </a>
            </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
               <ul class="navbar-nav ml-auto">
                  <li class="nav-item dropdown">
                     <a class="dropdown-item text-primary" href="">
                        <%= current_user.name %>
                     </a>
                  </li>
                  <li class="nav-item dropdown">
                        <%= link_to "Logout", session_path, method: :delete %>
                  </li>
                 </ul>
             </div>
         </div>
      </nav>
   <% end %>
</div>