<div class="modal-header">
<h5 class="modal-title" id="exampleModalLabel">User Detail</h5>
<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>
</div>
<div class="modal-body">
	<form>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">User Name:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.name %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Email Address:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.email %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Phone:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.phone %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Date of Birth:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.dob.strftime('%Y/%m/%d') %>">
      	</div>
        <div class="form-group">
          <label for="recipient-name" class="col-form-label">Address:</label>
          <input type="text" class="form-control" id="recipient-name" value="<%= @user.address %>">
        </div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Created At:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.created_at.strftime('%Y/%m/%d') %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Created User:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.created_user.name %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Updated At:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.updated_at.strftime('%Y/%m/%d') %>">
      	</div>
      	<div class="form-group">
        	<label for="recipient-name" class="col-form-label">Updated User:</label>
        	<input type="text" class="form-control" id="recipient-name" value="<%= @user.updated_user.name %>">
      	</div>
    </form>
</div>
<div class="modal-footer">
<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
